<input type='hidden' name='invoice_id'    id='invoice_id'     value='<%= @invoice.id %>' />
<div id='overview_table'></div>
<div id='invoice_table'></div>
<div id='message'></div>
<div id='controls'></div>

<% if @edituser %>
  <%= render :partial => 'caboose/users/admin_footer' %>
<% end %>

</div>


